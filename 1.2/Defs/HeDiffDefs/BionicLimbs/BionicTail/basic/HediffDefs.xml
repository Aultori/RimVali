<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef ParentName="AddedBodyPartBase">
    <defName>AvaliBasicBionicTail</defName>
    <label>Basic bionic tail</label>
    <labelNoun>a basic bionic tail</labelNoun>
    <description>A baisc bionic avali tail.</description>
    <spawnThingOnRemoved>AvaliBasicBionicTail</spawnThingOnRemoved>
    <hediffClass>HediffWithComps</hediffClass>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.05</partEfficiency>
      <betterThanNatural>true</betterThanNatural>
    </addedPartProps>
    <stages>
      <li>
        <statOffsets>
          <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
          <MaxHitPoints>5</MaxHitPoints>
        </statOffsets>
      </li>
    </stages>
    <comps>
      <li Class="AvaliMod.ConflictsWithProps">
        <conflictingHediffs>
          <li>TailStiffeningAugment</li>
        </conflictingHediffs>
        <showConflicts>true</showConflicts>
      </li>
    </comps>
  </HediffDef>
</Defs>